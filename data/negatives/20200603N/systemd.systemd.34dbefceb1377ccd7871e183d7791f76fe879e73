                 t = color->ccode - TERM_CCODE_BLACK;
 
-                /* bold causes light colors */
-                if (t < 8 && attr->bold)
+                /* bold causes light colors (only for foreground colors) */
+                if (t < 8 && attr->bold && color == &attr->fg)
                         t += 8;
 
                 r = palette[t * 3 + 0];

