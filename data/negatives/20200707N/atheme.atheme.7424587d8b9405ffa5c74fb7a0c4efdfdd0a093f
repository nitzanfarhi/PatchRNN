 	csreq_destroy(cs);
+	/* Check if GUARD is enabled by default and if so, ChanServ should join even 
+	 * if the founder is no longer present or identified. --siniStar
+	 */
+	if (mc->flags & MC_GUARD)
+		join(mc->name, chansvs.nick);
