 		return jso->o.c_int64;
 	case json_type_double:
+		if (jso->o.c_double >= INT64_MAX)
+			return INT64_MAX;
+		if (jso->o.c_double <= INT64_MIN)
+			return INT64_MIN;
 		return (int64_t)jso->o.c_double;
 	case json_type_boolean:
